FROM influxdb:2.2-alpine

ENV DOCKER_INFLUXDB_INIT_MODE=setup
ENV DOCKER_INFLUXDB_INIT_USERNAME=admin
ENV DOCKER_INFLUXDB_INIT_PASSWORD=adminadmin
ENV DOCKER_INFLUXDB_INIT_ORG=siemens
ENV DOCKER_INFLUXDB_INIT_BUCKET=edgedb
ENV DOCKER_INFLUXDB_INIT_RETENTION=1w
ENV DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=testtoken
ENV CONFIG_NAME=TEST

ADD init_influxdb.sh /init_influxdb.sh
ENTRYPOINT ["/init_influxdb.sh"]